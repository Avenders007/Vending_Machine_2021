	   //*We set a count on all the notes in the machine for easier management options for the owner
	   Declare int fiveCentCount = 100; 
	   Declare int tenCentCount = 100;
	   Declare int fiftyCentCount = 100;
	   Declare int oneDollarCount = 500;
	   Declare int fiveDollarCount = 100;
	   Declare int tenDollarCount = 100;
	   Declare int twentyDollarCount = 100;
	   Declare int thirtyDollarCount = 100;
	   Declare int fiftyDollarCount = 50;
	   Declare int oneHundredDollarCount = 20;
	   Declare int twoHundredDollarCount = 20;
	   Declare double total = ((fiveCent * fiveCentCount) + (tenCent * tenCentCount) + (fiftyCents * fiftyCentCount) + 
			                        (oneDollar * oneDollarCount) + (fiveDollar * fiveDollarCount) + 
			                        (tenDollar * tenDollarCount) + (twentyDollar * twentyDollarCount) + (thirtyDollar * thirtyDollarCount)+
			                        (fiftyDollar * fiftyDollarCount) + (oneHundredDollar * oneHundredDollarCount) + (twoHundredDollar * twoHundredDollarCount));
